  <h3><%= @player1_name %></h3>
  <form action=/attack method='post'>
    <input type='submit' value='Attack'>
  </form>
  <h4 align='left'><%= @player1_name %> HP: 100/100</h3>
</div>

<!-- Player 2 -->
<div style="float:right">
  <h3><%= @player2_name %></h3>
